@page
@model CtrlIngrsoSalon.App.Frontend.Pages.PreguntasModel
@{


    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <h3>Listado de Preguntas</h3>
            </div>
            <div class="col-sm-2">
                <a class="btn btn-success d-block" asp-page="./DetallePreguntas">Agregar</a>
            </div>
        </div>
    </div>

    <div class="row">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Pregunta</td>
                    <td>Resultado</td>
                    <td>Operaciones</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Preguntas != null)
                {
                    @foreach (var pregunta in Model.Preguntas)
                    {
                        <tr>
                            <td>@pregunta.id</td>
                            <td>@pregunta.pregunta</td>
                            @if (@pregunta.respuestaEsperada == true)
                            {
                                <td>Verdadero</td>
                            }
                            else
                            {
                                <td>Falso</td>
                            }
                            <td>
                                <a class="btn btn-primary table-btn" asp-page="./DetallePreguntas"
                            asp-route-preguntaId="@pregunta.id">
                                    <i class="fas fa-info-circle"> </i>
                                    Consultar
                                </a>
                                <a class="btn btn-primary table-btn" asp-page="./DetallePreguntas"
                            asp-route-preguntaId="@pregunta.id">
                                    <i class="fas fa-address-book"> </i>
                                    Editar
                                </a>
                                <a class="btn btn-danger" asp-page="./DetallePreguntas" asp-route-preguntaId="@pregunta.id">
                                    <i class="fas fa-trash-alt"> </i>
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No hay registros!</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}