@page
@model CtrlIngrsoSalon.App.Frontend.Pages.EliminarDocenteModel
@{

    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h3>Eliminar Docente</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form method="post">
                <input asp-for="docente.persona.id" type="hidden" />
                <input asp-for="docente.id" type="hidden" />
                <div class="form-group">
                    <label asp-for="docente.persona.nombre" class="control-label">Nombre: </label>
                    <input class="form-control" asp-for="docente.persona.nombre" disabled />

                </div>
                <div>
                    <label asp-for="docente.persona.apellidos" class="control-label">Apellidos: </label>
                    <input class="form-control" asp-for="docente.persona.apellidos" disabled />

                </div>
                <div class="form-group">
                    <label asp-for="docente.persona.fechaNacimiento" class="control-label">Fecha de Nacimiento: </label>
                    <input class="form-control" asp-for="docente.persona.fechaNacimiento" disabled />

                </div>
                <div class="form-group">
                    <label asp-for="docente.persona.telefono" class="control-label">Telefono: </label>
                    <input class="form-control" asp-for="docente.persona.telefono" disabled />

                </div>
                <div class="form-group">
                    <label asp-for="docente.persona.correo" class="control-label">Correo: </label>
                    <input class="form-control" asp-for="docente.persona.correo" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="docente.departamento" class="control-label">Departamento: </label>
                    <input class="form-control" asp-for="docente.departamento" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="docente.materia" class="control-label">Materia: </label>
                    <input class="form-control" asp-for="docente.materia" disabled />
                </div>
                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-primary" />
                    <a class="btn btn-primary table-btn" asp-page="./Docentes">
                        <i class="fas fa-info-circle"> </i>
                        Regresar
                    </a>
                </div>
            </form>
        </div>
    </div>


}
